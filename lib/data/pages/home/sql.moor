import '..\..\provider\tables.moor';

inventoryList (:search AS TEXT):
SELECT
    *
FROM
    inventory
WHERE
    item_name LIKE :search
ORDER BY
    id DESC
LIMIT
    20;

incrementItemCount(:id AS INT, :itemCount AS INT):
UPDATE
    inventory
SET
    item_count = item_count + :itemCount
WHERE
    id = :id;

resetData:
UPDATE
    inventory
SET
    item_count = 0,
    item_price = 0.0;